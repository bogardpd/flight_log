<% mapboxgl_attr = map.mapboxgl %>
<% map_id = mapboxgl_attr[:id] %>
<div class="map <%= mapboxgl_attr[:map_type] %>" id="<%= mapboxgl_attr[:id] %>">

  <% if local_assigns[:metrics] %>
  <div class="map-metrics">
    <div class="map-metric map-metric-label">Paulâ€™s<br>stats:</div>

    <% if metrics[:custom] %><% metrics[:custom].each do |key, value| %>
    <div class="map-metric">
      <span class="map-metric-number"><%= NumberFormat.value(value) %></span><br>
      <%= key.to_s.pluralize(value) %>
    </div>
    <% end %><% end %>

    <% if metrics[:flights] %>
    <div class="map-metric">
      <% if metrics[:flights_path] %><a href="<%= url_for(metrics[:flights_path]) %>"><% end %>
      <span class="map-metric-number flights-count" data-flights="<%= metrics[:flights] %>"><%= NumberFormat.value(metrics[:flights]) %></span><br>
      <%= "flight".pluralize(metrics[:flights]) %>
      <% if metrics[:flights_path] %></a><% end %>
    </div>
    <% end %>

    <% if metrics[:miles] %>
    <div class="map-metric">
      <span class="map-metric-number distance-mi"><%= NumberFormat.value(metrics[:miles]) %></span><br>
      <%= [metrics[:adjective],"mile"].compact.join(" ").pluralize(metrics[:miles]) %>
    </div>
    <div class="map-metric">
      <span class="map-metric-number distance-km"><%= NumberFormat.value(Distance::km(metrics[:miles])) %></span><br>
      <%= [metrics[:adjective],"kilometer"].compact.join(" ").pluralize(Distance::km(metrics[:miles])) %>
    </div>
    <% end %>

  </div>
  <% end %>

  <div class="map-mapbox" id="mapbox_<%= map_id %>"></div>
  
  <div class="map-info credit">
    <div>
      <%= link_to("GPX", params.permit!.merge(map_id: mapboxgl_attr[:id], extension: :gpx), download: "#{mapboxgl_attr[:id]}.gpx") %>
      &middot; 
      <%= link_to("KML", params.permit!.merge(map_id: mapboxgl_attr[:id], extension: :kml), download: "#{mapboxgl_attr[:id]}.kml") %>
      &middot; 
      <%= link_to("GeoJSON", params.permit!.merge(map_id: mapboxgl_attr[:id], extension: :geojson), download: "#{mapboxgl_attr[:id]}.geojson") %>
      &middot; 
      <%= link_to("GraphML", params.permit!.merge(map_id: mapboxgl_attr[:id], extension: :graphml), download: "#{mapboxgl_attr[:id]}.graphml") %>
      <% if map.gcmap_exists? %>
      &middot;
      <%= link_to("GCMap", map.gcmap_url) %>
      <% end %>
    </div>
  </div>

</div>

<script>
  const map_data_<%= map_id %> = <%= map.geojson.html_safe %>;
  const map_type_<%= map_id %> = '<%= mapboxgl_attr[:map_type] %>';
  populateMapboxGLMap('<%= map_id %>', map_data_<%= map_id %>, map_type_<%= map_id %>);
</script>