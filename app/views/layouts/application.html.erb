<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="icon" href="/favicon.ico" />
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :all %>
  <meta name="author" content="Paul Bogard" />
  <%= meta_description %>
  
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-48866855-1', 'pbogard.com');
    ga('send', 'pageview');

  </script>
</head>
<body>

<% if logged_in? %>
<div id="login_info">
Logged in as <span class="bold"><%= current_user.name %></span> &emsp; <%= link_to "Log out", logout_path, :method => :delete %>
</div>
<% end %>

<div class="container" id="top">
  <%= render 'layouts/header' %>
  
  <% flash.each do |key, value| %>
    <div class="alert"><%= value %></div>
  <% end %>
  
  <section>
    <!-- Begin page-specific body -->
    
    <%= yield %>
    
    <!-- End page-specific body -->
    
    <div class="clear"><!-- Empty div to clear floats before footer --></div>
    
    <%= debug(params) if Rails.env.development? %>
  </section>
</div>

<%= render 'layouts/footer' %>

</body>
</html>
