<h1>Travel Classes</h1>

<table class="flightlog">
  <tr>
    <th class="counter">#</th>
		<th class="class_class">Travel Class</th>
    <th class="class_flights">Flights</th>
<% @classes_array.each_with_index do |travel_class, index| %>
  <tr>
		<td class="counter"><%= index + 1 %></td>
    <td class="class_class"><%= link_to("#{travel_class[:travel_class]} class", show_class_path(travel_class[:travel_class]), :title => "View #{travel_class[:travel_class].downcase} class flights") %></td>
    <td class="class_flights"><%= render "graph_block", :value => travel_class[:count], :maximum => @classes_maximum %></td>
  </tr>
<% end %>
</table>
