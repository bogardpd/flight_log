<% if @operators_array.length > 0 %>

<table class="flightlog">
  <tr class="th">
    <th class="airline_airline">Operator</th>
    <th class="airline_flights">Flights</th>
  </tr>

<% @operators_array.each do |operator| %>
  <tr>
    <td class="airline_airline">
    <%= link_to(image_tag(airline_icon_path(operator[:iata_code]), alt: operator[:name], class: 'airline_icon') + operator[:name], show_operator_path(operator[:iata_code]), title: "View flights operated by #{operator[:name]}") %></td>
    <td class="airline_flights"><%= render "flights/graph_block", :value => operator[:count], :maximum => @operators_maximum %></td>
  </tr>
<% end %>
	<tr><td colspan="2" class="flightlog_total"><%= pluralize(@operators_array.count, 'operator') %></td></tr>
</table>

<% else %>

<p>All flights have unknown operators.</p>

<% end %>