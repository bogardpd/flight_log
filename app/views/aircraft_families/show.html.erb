<div id="title_info"><%= iata_airline_code_display(@aircraft_family.iata_aircraft_code) %></div>

<h1><%= @aircraft_family.full_name %></h1>

<% if @flights.any? %>

	<div class="page_navigation">
	  <ul>
			<li><%= link_to("Map", "#map", :title => "Map of flights flown on #{@aircraft_family}") %></li>
			<li><%= link_to("Airlines", "#airlines", :title => "Airlines with #{@aircraft_family} flights") %></li>
			<li><%= link_to("Classes", "#classes", :title => "Classes flown on #{@aircraft_family}") %></li>
			<li><%= link_to("Longest and Shortest", "#superlatives", :title => "Longest and shortest routes flown on #{@aircraft_family}") %></li>
			<li><%= link_to("Flight List", "#flights", :title => "Flights flown on #{@aircraft_family}") %></li>
	  </ul>
	</div>

<% end %>

<p>I have flown on <span class="bold"><%= @aircraft_family.full_name %></span> aircraft <%= pluralize(@flights.length, 'time') %>.</p>

<% if @flights.any? %>

	<a name="map"></a>

	<%= embed_gcmap_flights(@flights) %>
	<%= distance_block(@total_distance, adjective: 'total', flight_link: true) %>

	<a name="airlines"></a>
	<h2>Airlines with <%= @aircraft_family.family_name %> Flights</h2>

	<%= render "flights/summary_airline_table" %>

	<a name="classes"></a>
	<h2>Classes Flown on <%= @aircraft_family.family_name %> Aircraft</h2>

	<%= render "flights/summary_travel_class_table" %>

	<a name="superlatives"></a>
	<h2>Longest and Shortest Routes Flown on <%= @aircraft_family.family_name %> Aircraft</h2>

	<%= render "routes/route_superlatives_table", :superlatives => @route_superlatives %>

	<a name="flights"></a>
	<h2><%= @aircraft_family.family_name %> Flight List</h2>

	<%= render "flights/flight_table" %>

<% end %>

<% content_for :admin_actions do %>
  <% if @flights.length == 0 %>
    <%= link_to("Delete Aircraft Family", @aircraft_family, method: :delete, data: {:confirm => "Are you sure you want to delete #{@aircraft_family.full_name}?"}, class: 'warning') %> &emsp; 
  <% end %>
  <%= link_to("Edit Aircraft Family", edit_aircraft_family_path(@aircraft_family)) %>
<% end %>