<%= form_for(@aircraft_family) do |f| %>

  <%= render "error_messages" %>

  <%= f.hidden_field(:parent_id, value: @aircraft_family.parent_id) %>

  <p>
    <%= f.label :manufacturer %><br/>
    <% if @parent_family %>
      <%= f.text_field :manufacturer, value: (@aircraft_family.manufacturer || @parent_family.manufacturer), size: 25 %>
    <% else %>
      <%= f.text_field :manufacturer, size: 25 %>
    <% end %>
   
  </p>
  
  <p>
     <%= f.label :family_name, (@aircraft_family.is_family? ? "Aircraft Family Name" : "Aircraft Type Name") %><br />
     <%= f.text_field :family_name, size: 25 %>
  </p>

  <p>
    <%= f.label :iata_aircraft_code, "IATA Aircraft Code" %><br />
    <%= f.text_field :iata_aircraft_code, size: 3, maxlength: 3, class: "code-mono all-caps" %><br />
  </p>
  
  <% unless @aircraft_family.is_family? %>
  <p>
    <%= f.label :icao_aircraft_code, "ICAO Aircraft Code" %><br />
    <%= f.text_field :icao_aircraft_code, size: 4, maxlength: 4, class: "code-mono all-caps" %><br />
  </p>
  <% end %>

  <p>
    <%= f.label :category %><br />
  	<% category_select = @aircraft_family.category || (@aircraft_family.is_family? ? nil : @parent_family.category) %>
    <%= f.select(:category, options_for_select(AircraftFamily::CATEGORIES.invert, category_select), include_blank: true)%>
  	</p>
  </p>

  <p>
    <%= f.label :slug, "Unique Slug" %><br />
    <%= f.text_field :slug, size: 25 %><br />
  	Used to uniquely identify the aircraft family in URL parameters. Manufacturer name and type with hyphens in place of non-alphanumeric.<br>
    Example: <span class="code-mono">Boeing-737-800</span>
  </p>

  <p>
    <%= f.submit yield(:button_text) %>
  </p>
  
<% end %>