<table class="flightlog">
  <tr>
    <th class="counter">#</th>
		<th class="trip-name">Trip Section</th>
    <th class="flight-date">Departure</th>
  </tr>
<% @sections.each_with_index do |section, index| %>
  <tr>
    <td class="counter"><%= index + 1 %></td>
		<td class="trip-name"><%= Trip::HIDDEN_MARKER if section[:trip_hidden] %><%= link_to("Section #{section[:trip_section]} - #{section[:trip_name]}", show_section_path(section[:trip_id], section[:trip_section]), title: "View details for section #{section[:trip_section]} of #{section[:trip_name]}") %></td>
    <td class="flight-date"><%= Flight.format_date(section[:departure]) %></td>
  </tr>
<% end %>
  <tr><td colspan="3" class="flightlog-total"><%= pluralize(@sections.length, "section") %></td></tr>
</table>