<%= form_for(@airport) do |f| %>

  <%= render 'error_messages' %>

  <p>
    <%= f.label :iata_code, "IATA Code" %><br />
    <%= f.text_field :iata_code, :size => 5, :maxlength => 3, class: "iata_mono" %>
  </p>

  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>


  <p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.check_box :region_conus %> <%= f.label :region_conus, "CONUS" %>
  </p>

  <p>
    <%= f.submit yield(:button_text) %>
  </p>

<% end %>