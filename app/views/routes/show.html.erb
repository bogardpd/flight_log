<% provide(:title, "#{@route_with_arrow}") %>
<% provide(:meta_description, "Maps and lists of Paul BogardÊ¼s flights between #{@airports[0]} and #{@airports[1]}.") %>
<% add_admin_action link_to("Edit Route", edit_route_path(@airports.first, @airports.last)) %>
<% add_breadcrumb "Routes", routes_path %>
<% add_breadcrumb @route_with_arrow, show_route_path(airport1: @airports.first.slug, airport2: @airports.last.slug) %>

<% route_with_arrow_and_abbr = safe_join([content_tag(:abbr, @airports[0].iata_code, title: @airports[0].city), Route::ARROW_TWO_WAY_PLAINTEXT, content_tag(:abbr, @airports[1].iata_code, title: @airports[1].city)], " ") %>

<h1><%= @route_with_arrow %></h1>

<div class="page-navigation">
  <ul>
		<li><%= link_to("Map", "#map", :title => "Map of flights using #{@route_with_arrow}") %></li>
		<li><%= link_to("Airlines", "#airlines", :title => "Airlines using #{@route_with_arrow}") %></li>
		<li><%= link_to("Operators", "#operators", :title => "Operators using #{@route_with_arrow}") %></li>
		<li><%= link_to("Aircraft", "#aircraft", :title => "Aircraft using #{@route_with_arrow}") %></li>
		<li><%= link_to("Classes", "#classes", :title => "Classes flown on #{@route_with_arrow}") %></li>
		<li><%= link_to("Trips and Sections", "#trips-and-sections", :title => "Trips and sections with a #{@route_with_arrow} flight") %></li>
		<li><%= link_to("Flight List", "#flights", :title => "Flights using #{@route_with_arrow}") %></li>
  </ul>
</div>

<p>I have flown between <span class="bold"><%= link_to(@airports[0].city, airport_path(@airports[0].slug)) %></span> and <span class="bold"><%= link_to(@airports[1].city, airport_path(@airports[1].slug)) %></span> <%= pluralize(NumberFormat.value(@flights.length), "time") %>.</p>

<div id="map">
  <%= @route_map.gcmap %>
</div>

<% if @pair_distance %>
<p class="distance">
	<%= distance_block(@pair_distance, adjective: "per-flight", paragraph: false) %><br/>
	<%= distance_block(@pair_distance*@flights.length, adjective: "total", paragraph: false) %>
</p>
<% end %>


<h2 id="airlines">Airlines Using <%= route_with_arrow_and_abbr %></h2>
<%= render partial: "airlines/airline_count_table", locals: {airlines: @airlines, is_summary: true} %>


<h2 id="operators">Operators Using <%= route_with_arrow_and_abbr %></h2>
<%= render partial: "airlines/airline_count_table", locals: {airlines: @operators, type: :operator, is_summary: true, identical: (@airlines == @operators)} %>


<h2 id="aircraft">Aircraft Using <%= route_with_arrow_and_abbr %></h2>
<%= render partial: "aircraft_families/aircraft_family_count_table", locals: {aircraft_families: @aircraft_families, is_summary: true} %>


<h2 id="classes">Classes Flown on <%= route_with_arrow_and_abbr %></h2>
<%= render partial: "flights/class_count_table", locals: {classes: @classes, is_summary: true} %>


<h2 id="trips-and-sections">Trips and Sections Using <%= route_with_arrow_and_abbr %></h2>

<h3>Trips with a <%= route_with_arrow_and_abbr %> Flight</h3>
<%= @trips_map.gcmap %>

<h3>Trip Sections with a <%= route_with_arrow_and_abbr %> Flight</h3>
<%= @sections_map.gcmap %>

<h3>Trip and Section Details</h3>
<%= render partial: "trips/trip_and_section_table", locals: {trips_and_sections: @trips_and_sections} %>


<h2 id="flights"><%= route_with_arrow_and_abbr %> Flight List</h2>
<%= render partial: "flights/flight_table", locals: {flights: @flights, is_summary: true} %>